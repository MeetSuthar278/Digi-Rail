<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MonitorFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/mon_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:text="MONITOR YOUR TRAIN"
        android:textColor="@color/white"
        android:maxLines="1"
        android:textSize="29dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/mon_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/mon_label"
        android:gravity="center">

        <AutoCompleteTextView
            android:id="@+id/mon_train"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/t_search"
            android:fontFamily="@font/nunito"
            android:hint="Train Name or Train No."
            android:textColor="@color/blue2"
            android:textColorHint="@color/blue2"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/mon_searchbtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/t_submit"
            android:src="@drawable/search_svgrepo_com__1_"
            android:textColor="@color/blue" />
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:paddingRight="130dp"
        android:src="@drawable/montrain" />

</RelativeLayout>